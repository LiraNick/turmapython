--criar tabela
create table lirinhatrevosso(
    nome varchar(45) not null
    ,sobrenome varchar(50)not null
    ,idade integer null
);
--excluir tabela
drop table lirinhatrevosso 

--alterar tabela
alter table alunos 

--adicionar coluna
ADD column cpf varchar (14) NOT NULL DEFAULT '000.000.000-00'

--excluir coluna
drop column cpf

--adicionar id mutavel
add column id int not null generated by default as identity

--restaurar o schema public
drop schema public cascade;
create schema public;

--DML
create table people(
    nome varchar(45) not null
    ,sobrenome varchar(50)not null
    ,idade integer null
);

insert into people(
	nome, 
	sobrenome,
	idade
)

values(
	'nicolau'
   ,'boladao'
   ,'19'
);

alter table people 
add column id int not null generated by default as identity
--atualizar dados
update people 
	set 
		sobrenome = 'boladao'
	where id =1
	
update people 
	set 
		sobrenome = 'boladao'
	where id >= 1 and id <= 2

--deletar tudo!!
delete from people 
	where id = 1

######create table tableofboladions(######
	nome varchar(45) not null
	,sobrenome varchar(45) not null
	,idade integer null
);

alter table tableofboladions 
add column id int not null generated by default as identity

alter table tableofboladions
ADD column cpf varchar (14) NOT NULL DEFAULT '000.000.000-00'

alter table funcionarios 
drop column salario

alter table tableofboladions
rename to funcionarios;
 
drop table tableofboladions 

alter table funcionarios 
add column id int not null generated by default as identity

alter table funcionarios 
add salario int not null default 0;

update funcionarios 
	set 
	salario = '3000'
where id >=1 and id <= 6




