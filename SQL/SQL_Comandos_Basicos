--criar tabela
create table lirinhatrevosso(
    nome varchar(45) not null
    ,sobrenome varchar(50)not null
    ,idade integer null
);
--excluir tabela
drop table lirinhatrevosso 

--alterar tabela
alter table alunos 

--adicionar coluna
ADD column cpf varchar (14) NOT NULL DEFAULT '000.000.000-00'

--excluir coluna
drop column cpf

--adicionar id mutavel
add column id int not null generated by default as identity

--restaurar o schema public
drop schema public cascade;
create schema public;

--DML
create table people(
    nome varchar(45) not null
    ,sobrenome varchar(50)not null
    ,idade integer null
);

insert into people(
	nome, 
	sobrenome,
	idade
)

values(
	'nicolau'
   ,'boladao'
   ,'19'
);

alter table people 
add column id int not null generated by default as identity
--atualizar dados
update people 
	set 
		sobrenome = 'boladao'
	where id =1
	
update people 
	set 
		sobrenome = 'boladao'
	where id >= 1 and id <= 2

--deletar tudo!!
delete from people 
	where id = 1

Inserindo dados
insert into alunos (
nome,
sobrenome,
idade 
)
values(
	'andre'
	,'Granemann'
	,25
);
alterando dados

update alunos 
	set 
		nome = 'KING'
	where id = 3
Deletando dados
delete from  alunos 
	where id = 3

Selecionando tabela chave
select 
	id ,
	nome,
	sobrenome,
	idade 
from alunos 
 
Selecionando tabela toda
select 
*
from alunos 
where id < 5

Selecionando tabela toda percentual
select 
*
from alunos 
where sobrenome  like  '%o'

controle de transaÃ§Ã£o
begin transaction; 
	create  table categoria(
		id int generated always as identity
		,nome varchar(30)not null
		,descricao varchar(150) not null
	);
	create  table pessoa(
		id int generated always as identity
		,nome varchar(30)not null
		,sobreNome varchar(40) not null
	);
commit;
end;
